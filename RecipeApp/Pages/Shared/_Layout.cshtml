<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewData["Title"]</title>
        <link href="/css/site.css" rel="stylesheet" type="text/css" />
    </head>
    <header>
        <form class="search" method="get" asp-page="SearchResults" >
            <input type="text" class="searchInput" id="searchInput" name="searchInput" placeholder="What do you fancy?">
            <button type="submit" class="searchButton">Search!</button>
        </form>
        <div class="accountInfo">
            <p class="accountName">No Account</p>
            <button><a asp-area="" asp-page="Login">Login</a></button>
        </div>
    </header>
    <body>
        @RenderBody()
    </body>
    <footer>
        <p>Thanks for visiting</p>
    </footer>
</html>