@page
@model SearchResultsModel
@{
    ViewData["Title"] = "Search results";
}


<head>
    <link rel="stylesheet" href="/css/SearchResults.css" />
</head>

<body>
    <h1>
        Welcome to search results!
    </h1>
    @if (!string.IsNullOrEmpty(Model.SearchInput))
    {
    <p>Search input: @Model.SearchInput</p>
    }
    <ul>
    @foreach(var recipe in Model.RecipeList){
        <li><a asp-area="" asp-page="RecipePage" asp-route-recipeId=@recipe.Id>@recipe.Title</a></li>
    }
    </ul>
</body>
<footer>
    <a asp-area="" asp-page="/Index">To main menu</a>
</footer>